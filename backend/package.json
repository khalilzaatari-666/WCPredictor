{
  "name": "wc2026-backend",
  "version": "1.0.0",
  "description": "FIFA World Cup 2026 Predictor Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "generate": "prisma generate",
    "seed": "tsx src/utils/seed.ts",
    "seed:achievements": "node dist/scripts/seedAchievements.js",
    "seed:achievements:dev": "tsx src/scripts/seedAchievements.ts",
    "list:achievements": "node dist/scripts/listAchievements.js",
    "list:achievements:dev": "tsx src/scripts/listAchievements.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "blockchain:compile": "npx hardhat compile",
    "blockchain:test": "npx hardhat test",
    "blockchain:deploy": "npx hardhat run scripts/deploy.ts --network amoy",
    "blockchain:deploy:local": "npx hardhat run scripts/deploy.ts --network hardhat",
    "blockchain:verify": "npx hardhat run scripts/verify.ts --network amoy",
    "blockchain:test-mint": "npx hardhat run scripts/test-mint.ts --network amoy",
    "blockchain:node": "npx hardhat node"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/handlebars": "^4.0.40",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "canvas": "^2.11.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.2",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "playwright": "^1.57.0",
    "puppeteer": "^24.33.0",
    "qrcode": "^1.5.3",
    "resend": "^6.5.2",
    "sharp": "^0.33.1",
    "stripe": "^14.10.0",
    "twilio": "^5.10.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.27",
    "@types/qrcode": "^1.5.5",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.56.0",
    "hardhat": "^2.28.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  }
}
